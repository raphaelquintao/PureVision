    # GtkToolbar      ::space-size            = 16 # 1 + 2*2 (separator + margins)
    GtkToolbar      ::internal-padding      = 2
    GtkToolButton   ::icon-spacing          = 2

    GtkWidget       ::focus-line-width      = 1
    GtkWidget       ::focus-padding         = 0

    GtkWindow       ::resize-grip-height    = 1
    GtkWindow       ::resize-grip-width     = 1


    xthickness = 1
    ythickness = 1


    # Glow the tasklist by changing the color, instead of overlaying it with a rectangle
    #WnckTasklist    ::fade-overlay-rect     = 0

    GtkToolbar     :: shadow-type     = GTK_SHADOW_NONE
    # GtkMenuBar     :: shadow-type    = GTK_SHADOW_NONE
    GtkStatusbar   ::shadow_type      = GTK_SHADOW_NONE
    # GtkSpinButton  ::shadow_type      = GTK_SHADOW_NONE



    fg[NORMAL]          = @q_fg_color                 # Metacity and mouseover, Most text
    fg[PRELIGHT]        = shade (1.10, @q_fg_color)   # Text when mouseover
    fg[ACTIVE]          = shade (1.00, @q_fg_color)   # Text when mouseclicking button, Tabs, Active window list
    fg[SELECTED]        = shade (1.10, @q_fg_color)   # Metacity X when window selected
    fg[INSENSITIVE]     = shade (0.55, @q_fg_color)   # Insensitive Text
    # fg[INSENSITIVE]     = mix (0.3, @q_fg_color, @q_bg_color)   # Insensitive Text

    bg[NORMAL]          = @q_bg_color                 # Normal Background, inactive Metacity bar, buttons
    bg[PRELIGHT]        = shade (1.15, @q_bg_color)   # Mouseover buttons
    bg[ACTIVE]          = shade (0.77, @q_bg_color)   # Mouseclicking, Tabs, active window list
    bg[SELECTED]        = shade (1.00, @q_bg_color)   # Metacity Bar
    bg[INSENSITIVE]     = shade (1.00, @q_bg_color)   # Insensitive buttons

    base[NORMAL]        = @q_base_color               # Background, most
    base[PRELIGHT]      = mix (0.1, @q_fg_color, @q_base_color) # Mouseover menu
    base[ACTIVE]        = shade (0.75, @q_base_color) # Menu active item in inactive window
    base[SELECTED]      = shade (0.75, @q_base_color) # Menu active item in active window
    # base[INSENSITIVE]   = shade (0.75, @q_base_color)  # Background, insensitive
    # base[INSENSITIVE]   = mix (0.30, @q_base_color, @q_bg_color)   # Background, insensitive
    base[INSENSITIVE]   = shade (1.15, @q_bg_color)  # Background, insensitive

    text[NORMAL]        = @q_fg_color                 # Text in window
    text[PRELIGHT]      = shade (1.10, @q_fg_color)   # Text on Mouseover
    text[ACTIVE]        = shade (1.00, @q_fg_color)   # Active text in inactive window
    text[SELECTED]      = shade (1.10, @q_fg_color)   # Active text in active window
    text[INSENSITIVE]   = shade (0.55, @q_fg_color)   # Insensitive text

    engine "murrine" {

        arrowstyle           = 1    # 1 to draw filled arrows.
        cellstyle            = 1    # 0 remove the border around the selected cell, 1 for the border around the selected cell (as before).
        comboboxstyle        = 0    # 1 to colorize the GtkComboBox below the arrow.
        expanderstyle        = 0    # 0 to draw arrows, 1 to draw circles with plus and minus, 2 to draw buttons with plus and minus.
        focusstyle           = 0    # 0 to disable focus drawing, 1 to use dots, 2 to use a small colored rectangle, 3 to use a colored rectangle that touches the borders.

        border_shades  = { 1.0, 1.0 }
        # border_colors  = { shade (0.2, @q_bg_color) , shade (0.2, @q_bg_color) }
        # border_colors  = { @red , @red }

        animation           = FALSE  # FALSE = disabled, TRUE = enabled
        colorize_scrollbar  = FALSE  # FALSE = disabled, TRUE = enabled
        # focus_color         = "#ff9900"

        contrast            = 1.00  # 0.8 for less contrast, more than 1.0 for more contrast on borders
        glazestyle          = 0     # 0 = flat highlight, 1 = curved highlight, 2 = concave style, 3 = top curved highlight, 4 = beryl highlight
        glowstyle           = 0     # 0 = top glow, 1 = bottom glow, 2 = top and bottom glow, 3 = horizontal glow, 4 = centered glow
        glow_shade          = 1.0
        shadow_shades       = { 1.0, 1.0 }
        gradient_shades     = {1.0, 1.0, 1.0, 1.0} # default: {1.1,1.0,1.0,1.1}
        gradient_colors     = FALSE # {"#ffffff", "#ffffff", "#ffffff", "#ffffff"}, FALSE to disable
        text_shade          = 1.0
        highlight_shade     = 1.0   # set highlight amount for buttons or widgets
        lightborder_shade   = 1.0   # sets lightborder amount for buttons or widgets
        prelight_shade      = 1.0
        trough_shades       = { 1.0, 1.0 }

        lightborderstyle    = 1     # 0 = lightborder on top side, 1 = lightborder on all sides
        listviewheaderstyle = 0     # 0 = flat, 1 = glassy, 2 = raised
        listviewstyle       = 1     # 0 = nothing, 1 = dotted
        menubaritemstyle    = 0     # 0 = menuitem look, 1 = button look
        menubarstyle        = 0     # 0 = flat, 1 = glassy, 2 = gradient, 3 = striped
        menuitemstyle       = 0     # 0 = flat, 1 = glassy, 2 = striped
        menustyle           = 0     # 0 = no vertical menu stripe, 1 = display vertical menu stripe
        reliefstyle         = 0     # 0 = flat, 1 = inset, 2 = shadow
        progressbarstyle    = 0     # 0 = nothing, 1 = striped, 2 = cells
        rgba                = FALSE  # FALSE = disabled, TRUE = enabled
        roundness           = 2     # 0 = squared, 1 = old default, more will increase roundness
        scrollbarstyle      = 0     # 0 = nothing, 1 = circles, 2 = handles, 3 = diagonal stripes, 4 = diagonal stripes and handles, 5 = horizontal stripes, 6 = horizontal stripes and handles
        sliderstyle         = 0     # 0 = nothing added, 1 = handles
        stepperstyle        = 2     # 0 = standard, 1 = integrated stepper handles, 2 = squared steppers with a rounded slider
        toolbarstyle        = 0     # 0 = flat, 1 = glassy, 2 = gradient
        textstyle           = 0
        separatorstyle      = 0     # 0 solid line,1 smooth separator
        handlestyle         = 0     # 0 solid line,1 smooth separator
        spinbuttonstyle     = 0     # 1 to add a separator on the GtkSpinButton.
    }
}


